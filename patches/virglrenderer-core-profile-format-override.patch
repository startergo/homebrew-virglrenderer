@@ -7900,6 +7900,37 @@

    if (vrend_state.use_gles || vrend_state.use_core_profile) {
       vrend_build_format_list_gles();
+   if (vrend_state.use_core_profile) {
+      /* GL_BGRA not valid in Core Profile - override with GL_RGBA + swizzle */
+      /* A8R8G8B8_UNORM: Use GL_RGBA with BGRA swizzle instead of GL_BGRA */
+      tex_conv_table[VIRGL_FORMAT_A8R8G8B8_UNORM].glformat = GL_RGBA;
+      tex_conv_table[VIRGL_FORMAT_A8R8G8B8_UNORM].swizzle[0] = PIPE_SWIZZLE_Z;
+      tex_conv_table[VIRGL_FORMAT_A8R8G8B8_UNORM].swizzle[1] = PIPE_SWIZZLE_Y;
+      tex_conv_table[VIRGL_FORMAT_A8R8G8B8_UNORM].swizzle[2] = PIPE_SWIZZLE_X;
+      tex_conv_table[VIRGL_FORMAT_A8R8G8B8_UNORM].swizzle[3] = PIPE_SWIZZLE_W;
+      tex_conv_table[VIRGL_FORMAT_A8R8G8B8_UNORM].flags |= VIRGL_TEXTURE_NEED_SWIZZLE;
+      /* X8R8G8B8_UNORM: Use GL_RGBA with BGR1 swizzle instead of GL_BGRA */
+      tex_conv_table[VIRGL_FORMAT_X8R8G8B8_UNORM].glformat = GL_RGBA;
+      tex_conv_table[VIRGL_FORMAT_X8R8G8B8_UNORM].swizzle[0] = PIPE_SWIZZLE_Z;
+      tex_conv_table[VIRGL_FORMAT_X8R8G8B8_UNORM].swizzle[1] = PIPE_SWIZZLE_Y;
+      tex_conv_table[VIRGL_FORMAT_X8R8G8B8_UNORM].swizzle[2] = PIPE_SWIZZLE_X;
+      tex_conv_table[VIRGL_FORMAT_X8R8G8B8_UNORM].swizzle[3] = PIPE_SWIZZLE_1;
+      tex_conv_table[VIRGL_FORMAT_X8R8G8B8_UNORM].flags |= VIRGL_TEXTURE_NEED_SWIZZLE;
+      /* B8G8R8X8_UNORM: Use GL_RGBA with BGR1 swizzle instead of GL_BGRA */
+      tex_conv_table[VIRGL_FORMAT_B8G8R8X8_UNORM].glformat = GL_RGBA;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8X8_UNORM].swizzle[0] = PIPE_SWIZZLE_Z;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8X8_UNORM].swizzle[1] = PIPE_SWIZZLE_Y;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8X8_UNORM].swizzle[2] = PIPE_SWIZZLE_X;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8X8_UNORM].swizzle[3] = PIPE_SWIZZLE_1;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8X8_UNORM].flags |= VIRGL_TEXTURE_NEED_SWIZZLE;
+      /* B8G8R8A8_UNORM: Use GL_RGBA with BGRA swizzle instead of GL_BGRA */
+      tex_conv_table[VIRGL_FORMAT_B8G8R8A8_UNORM].glformat = GL_RGBA;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8A8_UNORM].swizzle[0] = PIPE_SWIZZLE_Z;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8A8_UNORM].swizzle[1] = PIPE_SWIZZLE_Y;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8A8_UNORM].swizzle[2] = PIPE_SWIZZLE_X;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8A8_UNORM].swizzle[3] = PIPE_SWIZZLE_W;
+      tex_conv_table[VIRGL_FORMAT_B8G8R8A8_UNORM].flags |= VIRGL_TEXTURE_NEED_SWIZZLE;
+   }
    } else {
       vrend_build_format_list_gl();
    }
